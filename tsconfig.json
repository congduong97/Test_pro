{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES2017"],
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "baseUrl": "src",
    "skipLibCheck": false,
    "paths": {
      "@assets/*": ["assets/*"],
      "@router/*": ["router/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@constants/*": ["constants/*"],
      "@screens/*": ["screens/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@common/*": ["common/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
